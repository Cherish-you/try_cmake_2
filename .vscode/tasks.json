{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build", //任何时候都是和launch中的preLaunchTask 一致
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build" // 指定构建目录
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}